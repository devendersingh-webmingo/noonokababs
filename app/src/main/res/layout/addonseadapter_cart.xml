<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"

    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="135dp"
                android:layout_height="133dp"
                android:scaleType="fitXY"
                android:src="@drawable/nofound"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Bottled Water 1 Liter "
                android:textColor="#000000"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Price: $ "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="44.6"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMainPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text=" 10% off"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/outofstockTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Out Of Stock."
                android:textColor="#F60F0F"
                android:textStyle="bold" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/quentityTvLL"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">


                <ImageView
                    android:id="@+id/Decrease"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="#244494"
                    android:padding="5dp"
                    android:src="@drawable/ic_minus"
                    app:tint="@color/white"
                    toggle:tint="@color/white" />

                <TextView
                    android:id="@+id/quentityTv"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/backgorund_bottonbar"
                    android:fontFamily="@font/awesome"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#99171212"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/Increase"

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="#244494"
                    android:padding="5dp"
                    android:src="@drawable/ic_plus"
                    app:tint="@color/white"
                    toggle:tint="@color/white" />
            </LinearLayout>


            <com.zcw.togglebutton.ToggleButton
                android:visibility="gone"
                android:id="@+id/defualtcardTB"
                android:layout_width="54dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"

                toggle:tbBorderWidth="2dp"
                toggle:tbOffColor="@color/tab_indicator_gray"
                toggle:tbOnColor="@color/orange"
                toggle:tbSpotColor="@color/white" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>