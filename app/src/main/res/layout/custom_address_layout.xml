<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_baseline_location_on_24" />

                <TextView

                    android:id="@+id/txt_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/location"
                    android:background="@drawable/shape"
                    android:backgroundTint="#dee6fb"
                    android:padding="5dp"
                    android:text="DEFAULT"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/txt_SHIPPING"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/txt_default"
                    android:background="@drawable/shape"
                    android:backgroundTint="#dee6fb"
                    android:padding="5dp"
                    android:text="SHIPPING"
                    android:textSize="10dp" />


                <TextView
                    android:id="@+id/productName"
                    android:layout_width="wrap_content"


                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_default"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/location"

                    android:text="SHIPPING"
                    android:textColor="#373737"

                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contactnumber"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_default"
                    android:layout_margin="5dp"

                    android:layout_toEndOf="@+id/productName"
                    android:text="8989898989"
                    android:textColor="#373737"

                    android:textSize="13dp" />


                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/productName"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/location"
                    android:text="
887 Cypress Rd. Garden Grove, CA 92840 Â· 9744 Glenlake St. Carson, California, USA"
                    android:textColor="#373737"
                    android:textSize="12dp" />

                <TextView
                    android:visibility="gone"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"

                    android:id="@+id/SetasDefeult_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/address"
                    android:layout_margin="10dp"
                    android:layout_toEndOf="@+id/location"
                    android:background="@drawable/radius"
                    android:text="SET AS DEFAULT"
                    android:textColor="@color/white"

                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/EditTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/address"

                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"

                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"

                    android:layout_toStartOf="@+id/removeTV"

                    android:background="@drawable/radius"
                    android:backgroundTint="#244494"
                    android:text="EDIT"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

                <TextView

                    android:id="@+id/removeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/address"

                    android:layout_alignParentRight="true"

                    android:layout_margin="10dp"
                    android:backgroundTint="#aa0400"
                    android:background="@drawable/radius"

                    android:text="REMOVE"
                    android:textColor="@color/white"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"

                    android:textSize="10dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>