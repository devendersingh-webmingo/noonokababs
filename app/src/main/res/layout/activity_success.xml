<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgcolor">

        <LinearLayout
            android:id="@+id/llSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivSuccess"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/success" />

            <TextView
                android:layout_margin="5dp"
                android:id="@+id/tvText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivSuccess"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:lineSpacingExtra="16.9sp"
                android:text="Successfully Verified"
                android:textColor="#2a383f"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvText"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"

                android:lineSpacingExtra="1.5sp"
                android:text="@string/success_text"
                android:textColor="#77909c"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spin_kit"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="50dp"

                android:layout_marginTop="66dp"
                android:foregroundGravity="center"
                app:SpinKit_Color="@color/orange" />

            <View
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@color/tab_indicator_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/awesome"
                android:gravity="center"
                android:lineSpacingExtra="1.5sp"
                android:padding="10dp"
                android:text="@string/text"
                android:textSize="14dp"
                />
        </LinearLayout>

    </RelativeLayout>
</layout>