<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout

        android:id="@+id/FoodDetailsLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgcolor"
        android:orientation="vertical"
        tools:context=".Fragments.BottomNavFragment.Food.FoodDetailFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:background="@color/bgcolor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bgcolor"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/food_IV"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/nofound" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"

                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:padding="5dp">


                        <TextView
                            android:id="@+id/Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text=""
                            android:textColor="#CC000000"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/Categoris"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:fontFamily="@font/awesome"
                            android:justificationMode="inter_word"
                            android:text=""
                            android:textColor="#B3000000"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/remark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:text=""
                            android:textColor="#CC000000"
                            android:textSize="10dp" />

                        <LinearLayout


                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <LinearLayout

                                android:layout_width="0dp"
                                android:layout_height="match_parent"

                                android:layout_weight="0.30"
                                android:background="@drawable/backgorund_bottonbar"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                                    android:id="@+id/text_rating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:saveEnabled="true"
                                    app:srb_borderColor="@color/orange"
                                    app:srb_fillColor="@color/yellow"
                                    app:srb_isIndicator="true"
                                    app:srb_numberOfStars="5"
                                    app:srb_starBorderWidth="2"
                                    app:srb_starSize="13dp"
                                    app:srb_stepSize="0.5"

                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="horizontal">




                                    <TextView
                                        android:visibility="gone"
                                        android:id="@+id/Avergeratingtv"
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_gravity="center"
                                        android:layout_margin="2dp"
                                        android:fontFamily="@font/awesome"
                                        android:gravity="center"
                                        android:text=""
                                        android:textColor="#244494"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:visibility="gone"
                                        android:layout_width="20dp"

                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_star"
                                        app:tint="#244494" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/TotalRatingTV"

                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/fibrefranklinbold"
                                    android:padding="3dp"
                                    android:text="Rating"
                                    android:textColor="#8B8C8C"
                                    android:textSize="10dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"

                                android:layout_weight="0.30"
                                android:background="@drawable/backgorund_bottonbar"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/timimg"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_gravity="center"
                                    android:layout_margin="2dp"
                                    android:fontFamily="@font/awesome"
                                    android:gravity="center"
                                    android:text=" "
                                    android:textColor="#244494"
                                    android:textSize="12dp" />

                                <TextView
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/fibrefranklinbold"
                                    android:padding="3dp"
                                    android:text="Delivery Time"
                                    android:textColor="#8B8C8C"
                                    android:textSize="10dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.30"
                                android:background="@drawable/backgorund_bottonbar"
                                android:orientation="vertical"
                                android:padding="5dp">


                                <TextView

                                    android:id="@+id/tvPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_gravity="center"
                                    android:layout_margin="2dp"
                                    android:fontFamily="@font/awesome"
                                    android:gravity="center"
                                    android:text="$ "
                                    android:textColor="#244494"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/fibrefranklinbold"
                                    android:padding="3dp"
                                    android:text=" "
                                    android:textColor="#8B8C8C"
                                    android:textSize="10dp" />
                            </LinearLayout>
                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="6dp"
                            android:text="Offer"
                            android:textColor="@color/black"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/offername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="3dp"
                            android:text=""
                            android:textColor="#CC000000"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/cuponname"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text=""
                            android:textColor="#CC000000"
                            android:textSize="10dp" />


                        <LinearLayout

                                android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:gravity="center"
                                android:layout_gravity="center"

                                android:layout_width="0dp"
                                android:layout_height="match_parent"

                                android:layout_weight="0.30"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <Spinner
                                    android:id="@+id/SpinnerCountry"
                                    style="@style/selectRelationSpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:background="@drawable/backgorund_bottonbar"
                                    android:fontFamily="@font/arciform"
                                    android:gravity="center_vertical"
                                    android:popupBackground="#ffffff"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"

                                android:layout_weight="0.30"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <LinearLayout
                                    android:padding="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="horizontal">


                                    <ImageView
                                        android:id="@+id/Decrease"
                                        android:padding="5dp"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:background="#244494"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_minus"
                                        app:tint="@color/white" />
                                    <TextView
                                        android:id="@+id/quentityTv"
                                        android:layout_width="50dp"
                                        android:background="@drawable/backgorund_bottonbar"


                                        android:layout_height="25dp"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/awesome"
                                        android:gravity="center"
                                        android:text="1"
                                        android:textColor="#99171212"
                                        android:textSize="15dp"
                                        android:textStyle="bold" />
                                    <ImageView
                                        android:id="@+id/Increase"

                                        android:padding="5dp"
                                        android:layout_width="30dp"

                                        android:layout_height="30dp"
                                        android:background="#244494"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_plus"
                                        app:tint="@color/white" />
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>

                        <TextView
                            android:layout_margin="10dp"
                            android:id="@+id/outofstockTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Out Of Stock."
                            android:textColor="#F60F0F"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:visibility="invisible"
                    android:id="@+id/nextproduced"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/AddCartTV"

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="30dp"
                        android:background="@drawable/btn_click_black_rectangle_with_semicircle_edge"

                        android:fontFamily="@font/awesome"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Add to Cart"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/AddFavTV"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="30dp"
                        android:background="@drawable/btn_click_black_rectangle_with_semicircle_edge"
                        android:backgroundTint="#379424"
                        android:fontFamily="@font/robotoregular"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Add to Favourite"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>