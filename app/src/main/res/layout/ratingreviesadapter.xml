<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:foreground="?android:attr/selectableItemBackground"

        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:id="@+id/cardView"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/food_IV"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/nofound" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/foodname_TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Burger Fry"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/FoodQuentityTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Quentity"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/FoodPriceTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textColor="@color/orange"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@color/tab_indicator_gray" />


            <TextView

                android:id="@+id/tv_descriptionp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"

                android:text="Give Rating &amp; Review"
                android:textColor="#000000"
                android:textSize="18dp"

                android:textStyle="bold" />

            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:id="@+id/text_rating"
                android:layout_width="wrap_content"
                android:layout_height="30dp"

                android:layout_marginLeft="10dp"
                app:srb_borderColor="@color/orange"
                app:srb_fillColor="@color/yellow"
                app:srb_numberOfStars="5"
                app:srb_starBorderWidth="5"
                app:srb_starSize="20dp"
                app:srb_stepSize="0.1"

                />

            <EditText
                android:id="@+id/descTv"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/allsideborder"
                android:fontFamily="@font/latomedium"
                android:gravity="left"
                android:hint="Text here...."
                android:padding="5dp"
                android:paddingStart="20dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/SubmitTV"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_click_black_rectangle_with_semicircle_edge"
                android:fontFamily="@font/robotomedium"
                android:gravity="center"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</FrameLayout>