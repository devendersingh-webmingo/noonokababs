<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/allsideborder"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingTop="10dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/fibrefranklinbold"
        android:letterSpacing="0.10"
        android:text="VERIFY THE EMAIL"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <View
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tab_indicator_gray" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/robotoregular"
        android:paddingRight="15dp"
        android:text="We will be verifying the Email"
        android:textColor="#757575"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/emailid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/robotoregular"
        android:text="VERIFY THE EMAIL"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/robotoregular"
        android:paddingRight="15dp"
        android:text="Is this OK, or would you like to edit the \nemail?"
        android:textColor="#757575"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"

            android:layout_margin="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="right"
            android:text="EDIT"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/okTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"

            android:layout_margin="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/robotoregular"
            android:gravity="right"
            android:text="OK"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>

