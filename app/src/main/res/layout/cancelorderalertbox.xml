<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/allsideborder"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/close"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_close_foreground" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Cancel Order Request"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/descET"

            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/allsideborder"
            android:fontFamily="@font/latomedium"
            android:gravity="center"
            android:hint="Cancellation Reason  :"
            android:paddingRight="15dp"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvDelete"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/graybutton"
                android:gravity="center"
                android:text="Submit"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"

                android:background="@drawable/btn_click_black_rectangle_with_semicircle_edge"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/white" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>