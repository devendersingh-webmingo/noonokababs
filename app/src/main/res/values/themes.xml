<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoonOKababs" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>



        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.NoonOKababs.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="statusBarBackground">@color/purple_500</item>
    </style>

    <style name="selectRelationSpinner" >
        <item name="android:text">Select Relationship</item>
        <item name="android:textSize">12sp</item>
 <!--       <item name="android:foreground">@drawable/spinner_draweble_resource</item>-->
    </style>



    <style name="Theme.NoonOKababs.NavigationView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/awesome</item>
        <item name="android:textColorSecondary">@color/drawer_tittle</item>
        <item name="itemTextColor">@color/drawer_tittle</item>
        <item name="colorOnSecondary">@color/drawer_tittle</item>
        <item name="itemStrokeColor">@color/drawer_tittle</item>
        <item name="colorPrimary">@color/drawer_tittle</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
    </style>

</resources>